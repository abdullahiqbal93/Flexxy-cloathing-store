{
  "presets": [
    ["@babel/preset-env", {
      "targets": {
        "node": "current"
      },
      "modules": "auto"
    }]
  ],
  "plugins": [
    ["module-resolver", {
      "root": ["./src"],
      "alias": {
        "@": "./src"
      },
      "extensions": [".js", ".json", ".mjs"]
    }],
    ["@babel/plugin-transform-modules-commonjs"]
  ]
}
  